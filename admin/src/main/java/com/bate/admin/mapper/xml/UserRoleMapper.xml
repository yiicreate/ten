<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="">
    <sql id="defaultColumns">
        id AS "id",
        user_id AS "userId",
        role_id AS "roleId"
    </sql>
    <sql id="leftJoin">
    </sql>

    <select id="get" resultType="table">
        SELECT
        <include refid="defaultColumns"/>
        FROM
        sys_user_role
        WHERE
        id = #{id}
    </select>

    <select id="findAll" resultType="table">
        SELECT
        <include refid="defaultColumns"/>
        FROM
        sys_user_role
    </select>

    <select id="findList" resultType="table">
        SELECT
        <include refid="defaultColumns"/>
        FROM
        sys_user_role
    </select>

    <insert id="save">
        INSERT INTO sys_user_role(
			id,
			user_id,
			role_id
		) VALUES (
			#{id},
			#{userId},
			#{roleId}
		)
    </insert>

    <update id="update">
        UPDATE  sys_user_role SET
				user_id = #{userId},
				role_id = #{roleId}
		 WHERE id=#{id}
    </update>

    <!--物理删除-->
    <update id="delete">
        DELETE FROM sys_user_role
		WHERE id = #{id}
    </update>
</mapper>