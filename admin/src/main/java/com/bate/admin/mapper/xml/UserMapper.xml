<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bate.admin.mapper.UserMapper">
    <sql id="userColumns">
		id AS "id",
		username AS "userName",
		sex AS "sex"
	</sql>

    <select id="findAll" resultType="com.bate.admin.entity.User">
        SELECT
        <include refid="userColumns"/>
        FROM sys_user
    </select>

    <select id="findList" resultType="com.bate.admin.entity.User">
        SELECT
        <include refid="userColumns"/>
        FROM sys_user WHERE  id = #{id}
    </select>

    <select id="getByName" resultType="com.bate.admin.entity.User">
        SELECT * FROM sys_user WHERE  username = #{userName}
    </select>

    <select id="getByToken" resultType="com.bate.admin.entity.User">
        SELECT * FROM sys_user WHERE  token = #{token}
    </select>

    <insert id="save">
        INSERT INTO sys_user(
			id,
			username,
			password,
			token,
			sex
		) VALUES (
			#{id},
			#{userName},
			#{password},
			#{token},
			#{sex}
		)
    </insert>

    <!-- 更新用户密码 -->
    <update id="updatePasswordById">
		UPDATE sys_user SET
			password = #{password}
		WHERE id = #{id}
	</update>

    <!-- 更新用户token -->
    <update id="updateTokenById">
		UPDATE sys_user SET
			token = #{token}
		WHERE id = #{id}
	</update>
</mapper>